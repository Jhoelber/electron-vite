{
  "name": "totem",
  "version": "1.0.0",
  "description": "totem de autoAtendimento",
  "main": "./out/main/index.js",
  "author": "totem.com",
  "homepage": "totem",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview --outDir=dist",
    "dev": "electron-vite dev --outDir=dist",
    "package": "electron-vite build --outDir=dist && electron-forge package",
    "make ": "electron-vite build --outDir=dist && electron-forge make",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "dependencies": {
    "@cloudinary/react": "^1.13.0",
    "@cloudinary/url-gen": "^1.19.0",
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^18.19.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "axios": "^1.6.5",
    "chrome": "^0.1.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "electron-dl": "^3.5.2",
    "electron-is-dev": "^2.0.0",
    "electron-localshortcut": "^3.2.1",
    "electron-modal": "^1.0.0",
    "electron-online": "^1.0.0",
    "electron-pdf-window": "^1.0.12",
    "electron-virtual-keyboard": "^1.0.7",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "is-online": "^4.0.2",
    "open": "^10.0.3",
    "pdf-poppler": "^0.2.1",
    "pdf-to-img": "^2.1.2",
    "pdf2pic": "^3.1.1",
    "pdfjs-dist": "^2.16.105",
    "postcss": "^8.4.38",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.autoAtendimento.totem",
    "productName": "Totem",
    "icon": "./src/renderer/src/assets/images/LogoIcon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "../src/assets/images",
      "./out/**"
    ]
  }
}
